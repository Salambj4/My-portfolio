.nav { display:none; }

/* Menu toggle button (hidden on desktop) */
.menu-toggle {
  display:none;                     /* show only in mobile media query */
  position:absolute;
  left:16px;
  top:100%;                         /* position at the bottom edge of header */
  margin-top:8px;                   /* small gap under the header */
  padding:8px 12px;
  border:none;
  border-radius:6px;
  cursor:pointer;
  background: #f1f1f1;              /* same color as header background */
  color: #111;
  box-shadow: 0 2px 6px rgba(0,0,0,0.08);
  z-index:1002;
}

/* Mobile behavior */
@media (max-width: 600px) {

  /* hide desktop nav */
  .mainNav { display:none; }

  /* show toggle button */
  .menu-toggle { display:block; }

  /* style the dropped mobile menu to sit under the brand */
  .nav {
    display:none;                   /* toggled to flex when open */
    position:absolute;
    top: calc(100% + 52px);         /* header height + extra - adjust if needed */
    left: 0;
    width: 220px;
    flex-direction: column;
    gap:0;
    padding: 8px 0;
    background:#000;
    border-radius:0 0 8px 0;
    box-shadow: 2px 4px 14px rgba(0,0,0,0.25);
    z-index:1001;
  }

  /* show when JS adds .show */
  .nav.show { display:flex; }

  .nav a {
    display:block;
    padding:10px 16px;
    color:aqua;
    text-decoration:none;
  }

  /* Make cards stack to two columns on small tablet */
  .cards { grid-template-columns:repeat(2,1fr); gap:16px; padding-top:24px; }

  /* reduce brand size on tiny screens */
  @media (max-width:350px) {
    .brand { font-size:20px; }
    .cards { grid-template-columns:1fr; }
    .menu-toggle { left:12px; padding:8px 10px; }
    .nav { width:180px; }
  }
}






