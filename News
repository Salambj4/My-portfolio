CREATE TABLE bookings (
  id INT AUTO_INCREMENT PRIMARY KEY,
  name VARCHAR(100),
  email VARCHAR(100),
  service VARCHAR(50),
  date DATE,
  notes TEXT
);



<?php
include "db.php";

if (isset($_POST["submit"])) {
  $name = $_POST["name"];
  $email = $_POST["email"];
  $service = $_POST["service"];
  $date = $_POST["date"];
  $notes = $_POST["notes"];

  $query = "INSERT INTO bookings (name,email,service,date,notes)
            VALUES ('$name','$email','$service','$date','$notes')";

  mysqli_query($conn, $query);
  $msg = "Booking successfully submitted!";
}
?>

<!DOCTYPE html>
<html>
<head>
  <title>Booking</title>
  <link rel="stylesheet" href="style.css">
</head>
<body>

<?php include "header.php"; ?>

<section class="intro">
  <h2>Book Installation or Consultation</h2>

  <?php if(isset($msg)) echo "<p>$msg</p>"; ?>

  <form method="POST">

    <input type="text" name="name" placeholder="Full Name" required>

    <input type="email" name="email" placeholder="Email" required>

    <select name="service" required>
      <option value="">Choose Service</option>
      <option value="Solar Installation">Solar Installation</option>
      <option value="EV Charger">EV Charger Installation</option>
      <option value="Smart Home">Smart Home System</option>
    </select>

    <input type="date" name="date" required>

    <textarea name="notes" placeholder="Additional notes"></textarea>

    <button name="submit" class="btn">Submit Booking</button>

  </form>
</section>

<footer>© 2026 Rolsa Technologies</footer>
</body>
</html>




