.calculator {
  max-width: 400px;
  margin: 20px auto;
  padding: 20px;
  border: 1px solid #ccc;
}

.calculator input {
  width: 100%;
  padding: 8px;
  margin: 5px 0 10px;
}

.calculator button {
  background: #2e7d32;
  color: white;
  padding: 10px;
  border: none;
  cursor: pointer;
}
function calculateHouse() {
  const electricity = document.getElementById("electricity").value;
  const gas = document.getElementById("gas").value;

  const electricityCO2 = electricity * 0.233;
  const gasCO2 = gas * 0.184;

  const total = electricityCO2 + gasCO2;

  document.getElementById("houseResult").innerText =
    "Estimated monthly CO₂: " + total.toFixed(2) + " kg";
}

function calculateVehicle() {
  const miles = document.getElementById("miles").value;
  const mpg = document.getElementById("mpg").value;

  const fuelUsed = miles / mpg;
  const vehicleCO2 = fuelUsed * 8.89;

  document.getElementById("vehicleResult").innerText =
    "Estimated monthly CO₂: " + vehicleCO2.toFixed(2) + " kg";
}



